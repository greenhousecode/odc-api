{
  "compilerOptions": {
    "typeRoots": ["./types/*.d.ts"],
    "types": ["node", "./types"],
    "moduleResolution": "node",
    "target": "ES5",
    "outDir": "./dist",
    "declarationDir": "./dist",
    "lib": ["ESNext", "DOM"],
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "emitDeclarationOnly": false,
    "esModuleInterop": true,
    "declaration": true,
    "downlevelIteration": true,
    "experimentalDecorators": true
  },
  "include": ["./src/**/*"]
}
