{
  "compilerOptions": {
    "module": "es6",
    "typeRoots": ["./types/*.d.ts"],
    "types": ["node", "./types"],
    "moduleResolution": "node",
    "target": "ES5",
    "outDir": "./dist",
    "declarationDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "emitDeclarationOnly": false,
    "esModuleInterop": true,
    "declaration": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
